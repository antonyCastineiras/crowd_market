<ul id="sign-in-tabs" class="nav">
	<li><a href="" class="tablinks active" onclick="displayForm(event,'user-form')">Sign in as User</a></li>
	<li><a href="" class="tablinks" onclick="displayForm(event,'seller-form')">Sign in as Seller</a></li>
</ul>

<div id="user-form" class="tab-content">
  <h2>Log in as User</h2>

	<%= form_for @user, as: :user, :url => session_path(:user) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	  </div>

	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  

	  <div class="actions">
	    <%= f.submit "Log in", :id => "user-log-in-button" %>
	  </div>
	<% end %>

</div>

<div id="seller-form" class="tab-content">
  <h2>Log in as Seller</h2>

  <%= form_for @seller, as: :seller, :url => session_path(:seller) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	  </div>

	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  

	  <div class="actions">
	    <%= f.submit "Log in", :id => "seller-log-in-button" %>
	  </div>
	<% end %>
</div>


<script>
$().ready(function() {
	$('#user-form').show();
});

	function displayForm(event,formId) {
		event.preventDefault();
		$('.tablinks').removeClass('active');
		$(event.target).addClass('active');
		$('.tab-content').hide();
		$('#'+formId).show();
	}
</script>